<div class="registration-wrapper">
  <div class="registration-container">
    <div class="registration-heading">ログイン</div>

    <div class="registration-form">
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
        
        <div class="registration-item">
          <%= f.label "email", class:"label" %>
          <%= f.email_field :email, class:"form-box" %>
        </div>

        <div class="registration-item">
          <%= f.label "パスワード", class:"label" %>
          <%= f.password_field :password, class:"form-box" %>
        </div>

        <%= f.submit "ログイン", class:"submit-btn" %>

        <ul class="not-login" >
          <li>ゲストログイン(閲覧用)は <%= link_to "こちら", users_guest_sign_in_path, method: :post, class:"guest-btn" %></li>
          <li>新規登録は <%= link_to "こちら", new_user_registration_path, class:"sign-up-btn" %></li>
        </ul>          

      <% end %>
    </div>
  </div>
</div>