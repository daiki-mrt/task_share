<div class="menu-bar">
  <div class="menu-bar-box">
    <div class="menu-items">
      <%= form_with scope: :search, url: users_path, method: :get, local: true do |f| %>
        <div class="search-field">
          <%= f.label :text, "キーワード", class:"search-label" %>
          <%= f.text_field :text, value: @search_params[:text], class:"search-text" %>
        </div>
        <div class="search-field">
          <%= f.label :occupation_id, "職種", class:"search-label" %>
          <%= f.collection_select(:occupation_id, Occupation.all, :id, :name, {selected: @search_params[:occupation_id], include_blank: "選択しない"}, {class:"search-occupation"}) %>
        </div>
        <div class="search-btn">
          <%= f.submit "検索" %>
        </div>
      <% end %>
      <div class="search-cancel-btn">
        <%= link_to "検索解除", users_path %>
      </div> 
    </div>
  </div>
</div>
  
<div class="main">
  <div class="posts">
    <% @users.each do |user| %>
        <div class="user-card">
          <div class="user-card-head">
            <% if user.profile.image.present? %>
              <%= link_to image_tag(user.profile.image.variant(resize: "50x50"), class:"user-image"), user_path(user) %>
            <% end %>
            <%= link_to user.name, user_path(user), class:"user-name" %>
          </div>
          <div class="user-text">
            自己紹介：<%= user.profile.text %>
          </div>
          <div class="user-occupation">
            職種：<%= user.profile.occupation_name(user) %>
          </div>
        </div>
    <% end %>
  </div>
</div>